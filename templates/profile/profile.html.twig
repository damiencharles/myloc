{% extends 'base.html.twig' %}

{% block title %} Profil de {{profil.pseudo}} {% endblock %}

{% block body %}
<div class="container">
    <h2 class="text-center my-5">Profil de {{profil.pseudo}}</h2>
        <div class="row text-center d-flex justify-content-center align-items-center my-4 description">  

            <div class='col-6 my-3'>
                <div><i class="fas fa-user-circle fa-5x mt-2"></i></div>
                <div class="mt-3">Pseudo : {{profil.pseudo}}</div>
                {% if profil.points >= 200 %}
                <div class="mt-3"> Super Prêteur <i class="fas fa-medal"></i></div>
                {% endif %}
            </div>

            <div class='col-6 my-3'>
                <div><i class="fas fa-envelope mr-2"></i>Email : {{profil.email}}</div>
                <div class="mt-2"><i class="fas fa-star mr-2"></i>Ses points : {{profil.points}} points</div>            
            </div>
    <hr>
        </div>

        <h2 class="text-center my-5">Ses annonces</h2>
        <div class="row text-center d-flex justify-content-center align-items-center my-4"> 
            {% for bien in biens %}
            <div class="col-4 my-3">
            <img src="/uploads/{{bien.image}}" class=" img-thumbnail card-img-top" alt="{{bien.image}}">
            <div class="mt-2">{{bien.nomBien}}</div>
            <div class="mt-2">
            <a href="/{{bien.id}}" type="button" class="btn btn-outline-dark">Voir et réserver</a>
            </div>

            </div>
{% endfor %}

</div>
</div>


{% endblock %}
