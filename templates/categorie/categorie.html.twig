{% extends 'base.html.twig' %}

{% block title %}{{categorie}}{% endblock %}

{% block body %}
<div class="container">
<h2 class="text-center my-5"> {{categorie}} : Annonces disponibles</h2>
<div class="row d-flex justify-content-center mb-5">

{% for bien in biens %}
<div class="col-4 card-deck">
<div class="card mb-4" style="width: 18rem;">
  <img src="/uploads/{{bien.image}}" class="card-img-top" alt="image">
  <div class="card-body">
    <h5 class="card-title">{{bien.nomBien}}</h5>
    <p>propos√© par <a href="/profil/" class="lien">{{bien.proprietaire}}</a></p>
    <button type="button" class="btn btn-dark"><a href="/{{ bien.id }}">En savoir plus</a></button>
  </div>
</div>
</div>

{% endfor %}
</div>
</div>

{% endblock %}
